@model IEnumerable<ToDo.Domain.Entities.Item>

@{
    ViewData["Title"] = "Index";
    var i = 1;
}

<p>
    <a asp-action="Create">Adicionar tarefa</a>
</p>

<table id="item" class="table">
    <thead>
    <tr class="">
        <th>#</th>
        <th>Descrição</th>
        <th>Data de criação</th>
        <th>Status</th>
        <th>Excluir</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@( i++ )</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td><input type="checkbox" @(item.Done ? "checked" : "") action=""/></td>
                <td><a class="btn btn-danger" href=""><i class="bi bi-trash"></i></a></td>
            </tr>
        }
    </tbody>
</table>

<script>
    function add() {
        window.location.href = ''
    }
</script>