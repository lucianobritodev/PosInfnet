@model ToDo.Web.Mvc.Models.CreateItemModel

@{
    ViewData["Title"] = "Criar item";
}

<div class="row mb-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-8 offset-2">
            <div class="d-flex align-items-end mb-4">
                <div class="form-group flex-grow-1">
                    <label asp-for="Description" class="control-label">Nome da tarefa</label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar tarefa" action="Create" class="btn btn-primary"/>
                </div>
            </div>
            <div class="mb-4">
                <a asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
</div>


